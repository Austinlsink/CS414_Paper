@model BrainNotFound.Paper.Models.BusinessModels.Department;

@{
    ViewData["Title"] = "Add Department Info- Admin";
}
<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2><i class="fa fa-mortar-board"></i> New Department</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <form id="newDepartmentForm" asp-action="NewDepartment" asp-controller="Admin" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left post-using-ajax">
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                                Department Code <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" asp-for="DepartmentCode" id="departmentCode" class="form-control col-md-7 col-xs-12">
                                <span id="codeError" asp-validation-for="DepartmentCode" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="form-group">
                            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Department Name</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input type="text" id="departmentName" asp-for="DepartmentName" class="form-control col-md-7 col-xs-12">
                                <span asp-validation-for="DepartmentName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-primary" type="button" data-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-success">New Department</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>