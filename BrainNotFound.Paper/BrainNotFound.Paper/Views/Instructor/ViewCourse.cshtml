@using BrainNotFound.Paper.Models.BusinessModels
@model BrainNotFound.Paper.Models.BusinessModels.Course;
@{
    ViewData["Title"] = "View Course - Instructor";
}

<!--Course and section information-->
<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2><i class="fa fa-book"></i> Course Information</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="col-md-10 col-sm-10 col-xs-12">
                        @{
                            String name;
                            name = ViewBag.department.DepartmentCode + " " + ViewBag.course.CourseCode;
                        }
                        <h3>@name @ViewBag.course.Name</h3>
                        <ul class="list-unstyled user_data">
                            <li>
                                <b>Credit Hours:</b> @ViewBag.course.CreditHours
                            </li>
                            <li>
                                <b> Description:</b> @ViewBag.course.Description
                            </li>
                        </ul>
                        <br />
                    </div>
                </div>
            </div>
        </div>
        <!--START: Section information-->
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2><i class="fa fa-pie-chart"></i> Sections</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="SectionsTable" class="table table-hover">
                        <thead>
                            <tr>
                                <th>Section Number</th>
                                <th>Location</th>
                                <th>Capcity</th>
                                <th>Day</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in ViewBag.sectionsList)
                            {
                                // Find the meeting times for each section
                                List<String> days = new List<string>();
                                List<SectionMeetingTime> sectionMeetingTimes = ViewBag.sectionMeetingTimeList;
                                var sectionMeetingTime = sectionMeetingTimes.Where(smt => smt.SectionId == s.SectionId).ToList();
                                foreach (SectionMeetingTime smt in sectionMeetingTime)
                                {
                                    days.Add(smt.Day);
                                }
                                String day = string.Join(", ", days);
                                <tr>
                                    <td>@s.SectionNumber</td>
                                    <td>@s.Location</td>
                                    <td>@s.Capacity</td>
                                    <td>@day</td>
                                    <td>
                                        <a asp-controller="Instructor" asp-action="ViewSection" asp-route-code="@ViewBag.department.DepartmentCode@ViewBag.course.CourseCode" asp-route-sectionNumber="@s.SectionNumber" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!--END: Section information-->
    </div>
</div>

<!--View Upcoming Tests-->
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><i class="fa fa-file-text"></i> Upcoming Tests</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                </ul>
                <div class="clearfix"></div>
            </div>
            @if (ViewBag.UpcomingTests.Count > 0)
            {
                <div class="x_content">
                    <p>Click checkbox to select multiple courses.</p>
                    <div class="table-responsive">
                        <table id="UpcomingTestsTable" class="table table-striped jambo_table bulk_action ">
                            <thead>
                                <tr class="headings">
                                    <th class="column-title">Name </th>
                                    <th class="column-title">Course</th>
                                    <th class="column-title">Start Time</th>
                                    <th class="column-title">End Time</th>
                                    <th class="column-title no-link last">
                                        <span class="nobr">Action</span>
                                    </th>
                                    <th class="bulk-actions" colspan="7">
                                        <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (TestSchedule test in ViewBag.UpcomingTests)
                                {
                                    <tr class="odd pointer">
                                        <td class=" ">@test.Test.TestName</td>
                                        <td class=" ">@ViewBag.department.DepartmentCode @ViewBag.course.CourseCode</td>
                                        <td class=" ">@String.Format("{0:f}", test.Test.TestSchedules.Select(x => x.StartTime).First())</td>
                                        <td class=" ">@String.Format("{0:f}", test.Test.TestSchedules.Select(x => x.EndTime).First())</td>
                                        <td class=" last">
                                            <a class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <p>There are no upcoming tests to be displayed</p>
            }
        </div>
    </div>
</div>

<!--View all previous tests-->
<div class="x_panel">
    <div class="x_title">
        <h2><i class="fa fa-file-text"></i> Previous Tests</h2>
        <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
        </ul>
        <div class="clearfix"></div>
    </div>
    @if (ViewBag.PreviousTests.Count > 0)
    {
        <div class="x_content">
            <p>Click checkbox to select multiple courses.</p>
            <div class="table-responsive">
                <table id="PreviousTestsTable" class="table table-striped jambo_table bulk_action ">
                    <thead>
                        <tr class="headings">
                            <th class="column-title">Name </th>
                            <th class="column-title">Course</th>
                            <th class="column-title">Start Time</th>
                            <th class="column-title">End Time</th>
                            <th class="column-title no-link last">
                                <span class="nobr">Action</span>
                            </th>
                            <th class="bulk-actions" colspan="7">
                                <a class="antoo" style="color:#fff; if;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (TestSchedule test in ViewBag.PreviousTests)
                        {
                            <tr class="odd pointer">
                                <td class=" ">@test.Test.TestName</td>
                                <td class=" ">@ViewBag.department.DepartmentCode @ViewBag.course.CourseCode</td>
                                <td class=" ">@String.Format("{0:f}", test.Test.TestSchedules.Select(x => x.StartTime).First())</td>
                                <td class=" ">@String.Format("{0:f}", test.Test.TestSchedules.Select(x => x.EndTime).First())</td>
                                <td class=" last">
                                    <a class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <p>There are no previous tests to be displayed.</p>
    }
</div>

@section scripts
{
    <!--DataTable for the Upcoming tests-->
    <script type="text/javascript" charset="utf8">
        $(document).ready(function () {
            $('#UpcomingTestsTable').DataTable({
                "order": [2, 'asc'],
                "columnDefs": [
                    { "orderable": false, "targets": [4] }
                ],
            });
        });
    </script>

    <!--DataTable for the Previous tests-->
    <script type="text/javascript" charset="utf8">
        $(document).ready(function () {
            $('#PreviousTestsTable').DataTable({
                "order": [2, 'asc'],
                "columnDefs": [
                    { "orderable": false, "targets": [4] }
                ],
            });
        });
    </script>
}