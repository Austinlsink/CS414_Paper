@using BrainNotFound.Paper.Models.BusinessModels
@model List<Course>

@{
    ViewData["Title"] = "List Courses - Instructor";
}

<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_content">
                    @if (Model.Any<Course>())
                    {
                        <p>Click checkbox to select multiple courses.</p>
                        <div class="table-responsive">
                            <table class="table table-striped jambo_table bulk_action ">
                                <thead>
                                    <tr class="headings">
                                        <th>
                                            <input type="checkbox" id="check-all" class="flat">
                                        </th>
                                        <th class="column-title">Course Code </th>
                                        <th class="column-title">Name </th>
                                        <th class="column-title">Credit Hours </th>
                                        <th class="column-title no-link last">
                                            <span class="nobr">Action</span>
                                        </th>
                                        <th class="bulk-actions" colspan="7">
                                            <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Course course in Model)
                                    {
                                        <tr class="odd pointer">
                                            <td class="a-center ">
                                                <input type="checkbox" class="flat" name="table_records">
                                            </td>
                                            @{
                                                String name;
                                                String routeCourse;
                                                List<Department> departments = ViewBag.departments;
                                                var dept = departments.Where(x => x.DepartmentId == course.DepartmentId).First();
                                                name = dept.DepartmentCode + " " + course.CourseCode;
                                                routeCourse = dept.DepartmentCode + course.CourseCode;


                                            }
                                            <td class=" ">@name</td>
                                            <td class=" ">@course.CourseName</td>
                                            <td class=" ">@course.CreditHours</td>
                                            <td class=" last">
                                                    <a asp-controller="Instructor" asp-action="ViewCourse" asp-route-code="@routeCourse" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>