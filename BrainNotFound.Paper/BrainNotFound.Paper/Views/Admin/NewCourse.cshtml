@model BrainNotFound.Paper.Models.BusinessModels.Course;

@{
    ViewData["Title"] = "Add Course Info - Admin";
}

<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2><i class="fa fa-book"></i> New Course</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <form asp-action="NewCourse" asp-controller="Admin" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">
                                Course ID <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input asp-for="CourseId" type="text" id="department-code" class="form-control col-md-7 col-xs-12">
                            </div>
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12"> Course Code </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input asp-for="CourseCode" type="text" id="department-name" class="form-control col-md-7 col-xs-12">
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12"> Course Name </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input asp-for="CourseName" type="text" id="department-name" class="form-control col-md-7 col-xs-12">
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12"> Course Description </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input asp-for="Description" type="text" id="department-name" class="form-control col-md-7 col-xs-12">
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12"> Credit Hours </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input asp-for="CreditHours" type="text" id="department-name" class="form-control col-md-7 col-xs-12">
                                <span class="text-danger"></span>
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button onclick="history.go(-1)" class="btn btn-primary" type="button">Cancel</button>
                                <button type="submit" class="btn btn-success">Add Course</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>