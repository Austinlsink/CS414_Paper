@using BrainNotFound.Paper.Services;
@model BrainNotFound.Paper.Models.BusinessModels.ApplicationUser;

@{
    ViewData["Title"] = "Edit Student - Admin";
}

<div class="">
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2><i class="fa fa-user"></i> Edit Student</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form asp-controller="Admin" asp-action="EditStudent" class="form-horizontal form-label-left">
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Salutation</label>
                            <!--Salutation field-->
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select asp-for="Salutation" class="select2_single form-control" tabindex="1">
                                    @foreach (string salutation in SalutationType.All)
                                    {
                                        @if (salutation == ViewBag.student.Salutation)
                                        {
                                            <option selected value="@salutation">@salutation.</option>
                                        }
                                        else
                                        {
                                            <option value="@salutation">@salutation.</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <!--UserName field-->
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="dept-code">
                                UserName <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input value="@ViewBag.student.UserName" asp-for="UserName" type="text" required="required" class="form-control has-feedback-left">
                                <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            </div>
                        </div>
                        <!--FirstName field-->
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="dept-code">
                                First Name <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input value="@ViewBag.student.FirstName" asp-for="FirstName" type="text" required="required" class="form-control has-feedback-left">
                                <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            </div>
                        </div>
                        <!--LastName field-->
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="dept-code">
                                Last Name <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input value="@ViewBag.student.LastName" asp-for="LastName" type="text" required="required" class="form-control has-feedback-left">
                                <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            </div>
                        </div>
                        <!--Email field-->
                        <div class="form-group">
                            <label for="dept-name" class="control-label col-md-3 col-sm-3 col-xs-12">Email </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input value="@ViewBag.student.Email" asp-for="Email" class="form-control has-feedback-left" type="text">
                                <span class="fa fa-envelope form-control-feedback left" aria-hidden="true"></span>
                            </div>
                        </div>
                        <!--PhoneNumber field-->
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-3">Phone Number</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input value="@ViewBag.student.PhoneNumber" asp-for="PhoneNumber" type="text" class="form-control has-feedback-left" data-inputmask="'mask' : '(999) 999-9999'">
                                <span class="fa fa-phone form-control-feedback left" aria-hidden="true"></span>
                            </div>
                        </div>
                        <!--Address field-->
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-3">Address</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="AddressInput" asp-for="Address" value="@ViewBag.student.Address" type="text" class="form-control has-feedback-left" placeholder="Address">
                                <span class="fa fa-map-marker form-control-feedback left" aria-hidden="true"></span>
                                <span id="StudentAddressErrorMessage" class="text-danger"></span>
                            </div>
                        </div>
                        <!--City field-->
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-3">City</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="CityInput" asp-for="City" type="text" value="@ViewBag.student.City" class="form-control has-feedback-left" placeholder="City">
                                <span class="fa fa-map-marker form-control-feedback left" aria-hidden="true"></span>
                                <span id="StudentCityErrorMessage" class="text-danger"></span>
                            </div>
                        </div>
                        <!--State field-->
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-3">State</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="StateInput" asp-for="State" type="text" value="@ViewBag.student.State" class="form-control has-feedback-left" placeholder="State">
                                <span class="fa fa-map-marker form-control-feedback left" aria-hidden="true"></span>
                                <span id="StudentStateErrorMessage" class="text-danger"></span>
                            </div>
                        </div>
                        <!--Zipcode field-->
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-3">ZipCode</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="ZipInput" asp-for="ZipCode" type="text" value="@ViewBag.student.ZipCode" class="form-control has-feedback-left" placeholder="ZipCode">
                                <span class="fa fa-map-marker form-control-feedback left" aria-hidden="true"></span>
                                <span id="StudentZipErrorMessage" class="text-danger"></span>
                            </div>
                        </div>
                        <!--DOB field-->
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-3">Date of Birth</label>
                            <div class="col-md-69 col-sm-6 col-xs-9">
                                <input id="DOBInput" asp-for="DOB" type="date" value="@ViewBag.student.DOB" class="form-control has-feedback-left" data-inputmask="'mask': 'yyyy-mm-dd'" placeholder="yyyy-mm-dd">
                                <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                                <span id="StudentDOBErrorMessage" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <!--Submit or cancel form-->
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button class="btn btn-primary" type="button" data-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-success">Save Changes</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>