                        <p>&nbsp;</p>
                        <button type="button" class="pull-right btn btn-primary btn-md saveNewTrueFalseQuestion" data-sectionId="{{SectionId}}" data-uuid="{{timeStamp}}">Create</button>
                        <button type="button" class="pull-right btn btn-danger btn-md cancelNewQuestion">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
        <!--Edit True/False Question End-->
    </script>


    <!-- Edit TrueFalse Question Template-->
    <!-- Parameters: questionId, pointValue, content, answer-->
    <!--Edit True/False Question Start-->
    <script type="text/x-handlebars-template" id="EditTrueFalseQuestionTemplate">
        <div class="editQuestionContainer">
            <!--Edit True/False Question Start-->
            <div class="ln_solid"></div>
            <div class="row well">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="col-md-1 col-sm-1 col-xs-3">
                        <p>Points:</p>
                        <input type="number" placeholder="pts" min="1" class="form-group form-control" id="pointValue-{{questionId}}" value="{{pointValue}}">
                    </div>
                    <div class="form-group col-md-5 col-sm-5 col-xs-12">
                        <p>Question: </p>
                        <input type="text" placeholder="Enter question text" class="form-control" id="TrueFalseContent-{{questionId}}" value="{{content}}" />
                        <span class="text-danger hidden" id="TFContentError-{{questionId}}">Please enter a question</span>
