@using BrainNotFound.Paper.Models.BusinessModels
@model Test;
@{
    Test test = ViewBag.Test;
    List<Section> sections = ViewBag.Sections;

    ViewData["Title"] = "Edit " + test.TestName + " - Instructor";
}

<div class="row" id="TestInformationSection">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><i class="fa fa-file-text-o"></i> @(ViewBag.Course.DepartmentCode + ViewBag.Course.CourseCode) - @(" " + test.TestName)</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-edit"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a id="EditTestName">Edit name</a></li>
                            <li><a href="#">Delete</a></li>
                        </ul>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <!-- START: Edit test name section-->
                <input type="hidden" id="TestId" value="@test.TestId" />
                <div id="EditNameContainer" class="well hidden">
                    <form asp-action="PartialEditNameAndCourse" asp-controller="Instructor" asp-route-TestId="" id="new-department" data-parsley-validate class="form-horizontal form-label-left">
                        <div class="col-md-9 col-xs-12">
                            <label for="TestName" class="control-label">Edit Test Name</label>
                            <input type="text" asp-for="TestName" placeholder="Enter test name" class="form-control" value="@test.TestName">
                            <input asp-for="TestId" type="hidden" value="@test.TestId" />
                            <input asp-for="CourseId" type="hidden" value="@test.CourseId" />
                        </div>
                        <div class="col-md-3 col-sm-12">
                            <label class="control-label">&emsp;</label>
                            <table>
                                <tr>
                                    <td><a id="cancelEditTestName" class="btn btn-danger">Cancel</a>
                                    <td> <button type="submit" class="btn btn-primary">Save</button></td>
                                </tr>
                            </table>
                        </div>
                    </form>
                </div>
                <!-- END: Edit test name section-->
                <!-- START: Statistics -->
                <h3>General</h3>
                <hr />
                <div class="animated flipInY col-md-4 col-sm-12 col-xs-12">
                    <div class="tile-stats">
                        <div class="icon">
                            <i class="fa fa-dot-circle-o"></i>
                        </div>
                        <div id="TotalPointsStats" class="count"></div>
                        <h3>Total Points</h3>
                    </div>
                </div>
                <div class="animated flipInY  col-md-4 col-sm-12 col-xs-12">
                    <div class="tile-stats">
                        <div class="icon">
                            <i class="fa fa-question"></i>
                        </div>
                        <div id="TotalQuestionsStats" class="count"></div>
                        <h3>Questions</h3>
                    </div>
                </div>
                <div class="animated flipInY col-md-4 col-sm-12 col-xs-12">
                    <div class="tile-stats">
                        <div class="icon">
                            <i class="fa fa-sort-alpha-asc"></i>
                        </div>
                        <div id="TotalSectionsStats" class="count"></div>
                        <h3>Sections</h3>
                    </div>
                </div>
                <div class="clearfix"></div>

                <!-- END: Statistics -->
                <!-- START: Schedule -->
                <h3>Schedule</h3>
                <hr />

                <div id="NoScheduledTestContainer" class="text-center">
                    <p>This test has not been scheduled yet.</p>
                    <hr />
                </div>
                <table id="TestAssignmentTable" class="table table-striped hidden">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Availability</th>
                            <th>Time Limit</th>
                            <th>Students Assigned</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                <!-- END: Schedule -->
                <!-- START: New Test Schedule -->
                <div id="NewScheduleContainer" class="well hidden">
                    <h4><i class="fa fa-calendar"></i> New Schedule</h4>
                    <hr />

                    <div class="col-md-8 col-sm-12">
                        Test Availability
                        <fieldset>
                            <div class="control-group">
                                <div class="controls">
                                    <div class="input-prepend input-group">
                                        <span class="add-on input-group-addon"><i class="glyphicon glyphicon-calendar fa fa-calendar"></i></span>
                                        <input type="text" name="testScheduleDateTime" id="testScheduleDateTime" class="form-control" value="01/01/2016 - 01/25/2016">
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>

                    <div class="col-md-2 col-sm-8 col-xs-12">
                        Time Limit (Minutes)
                        <input type="number" id="TimeLimit" class="form-control" name="TimeLimit" required="" value="50">

                    </div>
                    <div class="col-md-2 col-sm-4 col-xs-12">
                        <div class="checkbox">
                            &emsp;
                            <div class="control-group">
                                <label for="UnlimitedTimeCheckBox">
                                    <input type="checkbox" name="UnlimitedTimeCheckBox" id="UnlimitedTimeCheckBox" />  Unlimited
                                </label>
                            </div>
                        </div>


                    </div>
                    <div class="clearfix"></div>

                    <!-- Start: Student Test Assignmnet -->

                    <hr />
                    <!-- Start: Left -->
                    <div class=" col-md-8 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h4><i class="fa fa-users"></i> Assign</h4>
                            </div>
                            <div class="x_content">
                                Select a section:
                                <select id="SelectSection" class="form-control" required="">
                                    <option selected disabled="disabled">-- Choose a Section --</option>
                                    @foreach (Section classSection in sections)
                                    {
                                        <option value="@classSection.SectionId">Section @classSection.SectionNumber</option>
                                    }
                                </select>
                                <br />
                                <div class="clearfix"></div>
                                <button id="AssignEntireSection" type="button" class="btn btn-sm btn-primary alignright"><i class="fa fa-pie-chart"></i> Entire Section</button>
                                <div class="clearfix"></div>
                                <hr />

                                <div id="SectionNotSelectedContainer">
                                    <div class="text-center"><p>Please select a section</p></div>
                                </div>

                                <div id="StudentsInSectionTableContainer" class="hidden">
                                    <table id="StudentsInSectionTable" class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th>First Name</th>
                                                <th>Last Name</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                                <hr />

                                <button Id="AssignSelectedStudents" type="button" class="btn btn-sm btn-primary alignright"><i class="fa fa-users"></i> Selected Students</button>
                                <div class="clearfix"></div>
                            </div>

                        </div>


                    </div>

                    <!-- Start: Right -->
                    <div class="col-md-4 col-sm-12 col-xs-12">
                        <div id="AssignedTablePlaceHolder">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h4><i class="fa fa-users"></i> Assigned</h4>
                                </div>
                                <div class="x_content">
                                    <i class="fa fa-pie-chart"></i> Sections

                                    &emsp;
                                    <p id="NoSectionsAssignedTest" class="">There are no entire section assigned.</p>

                                    <!--Sections assigned table-->
                                    <table id="SectionsAssignedTest" class="table table-striped hidden">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th>Section</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>

                                    <hr />
                                    <i class="fa fa-user"></i>  Individual Students

                                    <p id="NoStudentsAssignedTest">There are no indivisual students assigned.</p>
                                    <table id="StudentsAssignedTest" class="table table-striped hidden">
                                        <thead>
                                            <tr>
                                                <th>Section</th>
                                                <th>First Name</th>
                                                <th>Last Name</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>

                        </div>

                        <!-- End: Student Test Assignmnet-->

                    </div>
                    <div class="clearfix"></div>
                    <hr />
                    <table class="alignright">
                        <tr>
                            <td><a id="CancelNewSchedule" class="btn btn-danger">Cancel</a>
                            <td><button id="SaveNewTestSchedule" type="button" class="btn btn-primary">Save New Schedule</button></td>
                        </tr>
                    </table>
                    <div class="clearfix"></div>
                </div>
                <!-- END: New Test Schedule -->
                <div class="text-right">
                    <a id="NewSchedule" class="btn btn-round btn-info">New Schedule</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="TestSections">

</div>

<div id="AddTestSection">
    <div class="row">
        <div class="col-md-12 col-xs-12">
            <div class="clearfix"></div>
            <div class="text-center">
                <button type="button" id="AddTestSectionBtn" class="btn btn-lg btn-round btn-primary"><i class="fa fa-plus"></i> &nbsp;Add Section</button>
            </div>
        </div>
    </div>
</div>

<!-- Confirm deletion Modal -->
<div id="confirm-deletion-modal" class="modal fade confirm-delition-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title"><i class="fa fa-mortar-board"></i>Confirm Delete</h3>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" id="cancelDelete" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" id="confirmDeletion" class="btn btn-primary">Delete</button>
            </div>
        </div>
    </div>
</div>


@section Scripts
    {
    <script src="~/vendors/autosize/dist/autosize.min.js"></script>
    <script type="text/javascript" src="~/vendors/handlebars/handlebars-v4.1.1.js"></script>
    <script type="text/javascript" src="~/js/EditTest.js"></script>
}

<!-- Template Snippets -->
@section TemplateSnippets
    {

    <!-- Row template for assigned sections to test -->
    <script type="text/x-handlebars-template" id="SectionAssigmentTableRowTemplate">
        <tr>
            <td>{{RowNumber}}</td>
            <td>{{SectionNumbers}}</td>
            <td>
                <button value="{{SectionId}}" class="btn btn-danger btn-xs deleteEntireSectionAssignment"><i class="fa fa-trash-o"></i> Remove </button>
            </td>
        </tr>
    </script>


    <script type="text/x-handlebars-template" id="StudentAssignmnetRowTemplate">
        <tr>
            <td>{{SectionNumber}}</td>
            <td>{{FirstName}}</td>
            <td>{{LastName}}</td>
            <td>  <button value="{{StudentId}}" class="btn btn-danger btn-xs deleteStudentAssigment"><i class="fa fa-trash-o"></i> Remove </button></td>
        </tr>
    </script>

    <!-- Row template from schedule table -->
    <script type="text/x-handlebars-template" id="ScheduleTableRowTemplate">
        <tr>
            <th scope="row">{{counter}}</th>
            <td>
                <p><i class="fa fa-calendar"></i> {{Availability}}</p>
            </td>
            <td>{{TimeLimit}}</td>
            <td>{{Assigmnet}}</td>
            <td>
                <button asp-controller="Instructor" asp-action="EditTest" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </button>
                <input type="hidden" name="CourseId" value="d" />
                <button type="button" data-testScheduleId="{{TestScheduleId}}" class="btn btn-danger btn-xs DeleteSectionSchedule"><i class="fa fa-trash-o"></i> Delete </button>
            </td>
        </tr>
    </script>
}
<!--Multiple Choice Option Start -->
<script type="text/x-handlebars-template" id="MultipleChoiceOptionTemplate">
 
</script>

<!--Multiple Choice Option End -->

<!-- Multiple choice option Text Box Template -->
<script type="text/x-handlebars-template" id="MultipleChoiceOptionTextBoxTemplate">
    <div class="col-md-12 col-sm-12 col-xs-12 newMultipleChoiceOption-{{timeStamp}}">
        <div class="col-md-1 col-sm-1 col-xs-1 text-center">
            <input style="margin-top:12px" class="form-check-input isCorrect" type="checkbox">
        </div>
        <div class="form-group col-md-10 col-sm-10 col-xs-10">
            <input type="text" placeholder="Option text" class="form-control optionContent">
            <span class="text-danger hidden optionErrorMessage ">Option may not be empty</span>
        </div>
        <div class="form-group col-md-1 col-sm-1 col-xs-1">
            <a style="margin-top:8px" data-uuid="{{timeStamp}}" class="pull-right deleteMultipleChoiceOptionNewQuestion"><i class="fa fa-trash-o"></i></a>
        </div>
    </div>
</script>
<!--Edit Multiple Choice Question End-->
<!-- Multiple choice option Text Box Template -->
<script type="text/x-handlebars-template" id="EditableMultipleChoiceOptionTextBoxTemplate">
    <div class="col-md-12 col-sm-12 col-xs-12 EditMultipleChoiceOption-{{questionId}}">
        <div class="col-md-1 col-sm-1 col-xs-1 text-center">
            {{#if isCorrect}}
            <input style="margin-top:12px" class="form-check-input isCorrect" checked="checked" type="checkbox">
            {{else}}
            <input style="margin-top:12px" class="form-check-input isCorrect" type="checkbox">
            {{/if}}
        </div>
        <div class="form-group col-md-10 col-sm-10 col-xs-10">
            <input type="text" placeholder="Option text" class="form-control optionContent" value="{{optionContent}}">
            <span class="text-danger hidden optionErrorMessage ">Option may not be empty</span>
        </div>
        <div class="form-group col-md-1 col-sm-1 col-xs-1">
            <a style="margin-top:8px" data-questionId="{{questionId}}" class="pull-right deleteMultipleChoiceOptionNewQuestion"><i class="fa fa-trash-o"></i></a>
        </div>
    </div>
</script>
<!--Edit Multiple Choice Question End-->

<!--Edit essay Question Start-->
<script type="text/x-handlebars-template" id="EditEssayQuestionTemplate">
    <div class="editQuestionContainer">
        <!--Edit True/False Question Start-->
        <div class="ln_solid"></div>
        <div class="row well">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="col-md-1 col-sm-1 col-xs-3">
                    <p>Points:</p>
                    <input type="number" placeholder="pts" min="1" class="form-group form-control" id="EssayPointValue-{{questionId}}" value="1">
                </div>
                <div class="form-group col-md-11 col-sm-11 col-xs-12">
                    <label>Question: </label>
                    <input type="text" placeholder="Enter question text here" class="form-control " id="EdittedessayContent-{{questionId}}" value="{{content}}" />
                    <span class="text-danger hidden" id="editEssayContentError-{{questionId}}">Please enter a question</span>
                </div>
                <div class="col-md-1 col-sm-1 col-xs-3"></div>
                <div class="col-md-11 col-sm-11 col-xs-12">
                    <label>Expected Answer</label>
                    <textarea id="edittedExpectedAnswer-{{questionId}}">{{expectedAnswerContent}}</textarea>
                </div>

                <div class="form-group col-md-3 col-sm-3 col-xs-12 pull-right">
                    <p>&nbsp;</p>
                    <button type="button" class="pull-right btn btn-primary btn-md saveEdittedEssayQuestion"  data-questionId="{{questionId}}">Update</button>
                    <button type="button" class="pull-right btn btn-danger btn-md cancelEditQuestion" data-questionId="{{questionId}}">Cancel</button>
                </div>
            </div>
        </div>
    </div>

</script>