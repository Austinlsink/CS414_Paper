@using BrainNotFound.Paper.Models.BusinessModels
@{
    List<Section> sections = ViewBag.Sections;
}
<div id="NewSchedule" class="well">
    <h4><i class="fa fa-calendar"></i> New Schedule</h4>
    <hr />

    <div class="col-md-6 col-sm-12">
        Test Availability
        <fieldset>
            <div class="control-group">
                <div class="controls">
                    <div class="input-prepend input-group">
                        <span class="add-on input-group-addon"><i class="glyphicon glyphicon-calendar fa fa-calendar"></i></span>
                        <input type="text" name="testScheduleDateTime" id="testScheduleDateTime" class="form-control" value="01/01/2016 - 01/25/2016">
                    </div>
                </div>
            </div>
        </fieldset>
    </div>

    <div class="col-md-4 col-sm-8 col-xs-12">
        Time Limit (minutes)
        <input type="text" id="TimeLimitTextBox" class="form-control" name="TimeLimit" required="" value="50">

    </div>
    <div class="col-md-2 col-sm-4 col-xs-12">
        <div class="checkbox">
            &emsp;
            <div class="control-group">

                <label for="UnlimitedTimeCheckBox">
                    <input onclick="UnlimitedTimeCheckBox()" type="checkbox" name="UnlimitedTimeCheckBox" id="UnlimitedTimeCheckBox" />  Unlimited
                </label>
            </div>
        </div>


    </div>
    <div class="clearfix"></div>

    <!-- Start: Student Test Assignmnet -->

    <hr />
    <!-- Start: Left -->
    <div class=" col-md-6 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h4><i class="fa fa-users"></i> Assign</h4>
            </div>
            <div class="x_content">
                <i class="fa fa-pie-chart"></i> Entire Section:
                <select id="SectionAssignment" class="form-control" required="">
                    <option selected disabled="disabled">-- Choose a Section --</option>
                    @foreach (Section classSection in sections)
                    {
                        <option value="@classSection.SectionId">Section @classSection.SectionNumber</option>
                    }
                </select>
                &emsp;
                <div class="clearfix"></div>
                <button type="button" class="btn btn-sm btn-primary alignright">Assign to Section</button>
                <div class="clearfix"></div>
                <hr />
                <i class="fa fa-user"></i>  Individual Students:

                <select id="SectionIndividualStudent" class="form-control" required="">
                    <option selected disabled="disabled">-- Choose a Section --</option>
                    @foreach (Section classSection in sections)
                    {
                        <option value="@classSection.SectionId">Section @classSection.SectionNumber</option>
                    }
                </select>
                <div id="StudentTablePlaceHolder">
                    &emsp;
                    <div class="text-center"><p>Please select a section</p></div>
                </div>

                <hr />
                <button type="button" class="btn btn-sm btn-primary alignright">Assign to 3 students</button>
                <div class="clearfix"></div>
            </div>

        </div>


    </div>
    <div class="col-md-6 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h4><i class="fa fa-users"></i> Assigned</h4>
            </div>
            <div class="x_content">
                <i class="fa fa-pie-chart"></i> Sections
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Section Number</th>
                            <th>Number of Students</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>43 Students</td>
                            <td>
                                <button type="submit" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Remove </button>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>13 Students</td>
                            <td>
                                <button type="submit" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Remove </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <hr />
                <i class="fa fa-user"></i>  Individual Students
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Section Number</th>
                            <th>Number of Students</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>43 Students</td>
                            <td>
                                <button type="submit" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </button>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>13 Students</td>
                            <td>
                                <button type="submit" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>



        <!-- End: Student Test Assignmnet-->

    </div>
    <div class="clearfix"></div>
    <table class="alignright">
        <tr>
            <td><a onclick="Calcel('#NewSchedule')" class="btn btn-round btn-danger">Cancel</a>
            <td><button type="button" class="btn btn-round btn-primary">Save New Schedule</button></td>
        </tr>
    </table>
    <div class="clearfix"></div>
</div>


<script type="text/javascript">


    init_daterangepicker_TestSchedule();
</script>