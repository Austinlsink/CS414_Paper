                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="deleteQuestion" data-questionId="{{questionId}}"><i class="fa fa-trash-o"></i></a></li>
                            <li><a class="editTrueFalseQuestion" data-questionId="{{questionId}}"><i class="fa fa-edit"></i></a></li>
                            <li><a class=""><i class="fa fa-chevron-up"></i></a></li>
                            <li><a class=""><i class="fa fa-chevron-down"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!--True False Question End-->
    </script>
}
<!--True False Question End-->
<!--Multiple Choice Question Start-->
<script type="text/x-handlebars-template" id="MultipleChoiceQuestionTemplate">
    <div id="questionContainer-{{questionId}}" class="row">
        <div class="ln_solid"></div>

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="col-md-1 col-sm-1 col-xs-3">
                <input type="number" id="pointValue-{{questionId}}" data-questionId="{{questionId}}" value="{{pointValue}}" min="1" class="form-group form-control pointValue">
