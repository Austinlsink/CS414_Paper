@using BrainNotFound.Paper.WebApp.Models.BusinessModels;
@model List<ApplicationUser>;

@{
    ViewData["Title"] = "Manage Instructors - Admin";
}


    <h1>List of Instructors</h1>
    <hr />
<div class="row">
    <a asp-action="NewInstructor" asp-controller="Admin" type="button" class="btn btn-dark">New Instructor</a>
</div>
    
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel dept_table">
            <div class="x_content">

                <p>Click checkbox to select multiple departments.</p>

                <div class="table-responsive">
                    <table class="table table-striped jambo_table bulk_action">
                        <thead>
                            <tr class="headings">
                                <th>
                                    <input type="checkbox" id="check-all" class="flat">
                                </th>
                                <th class="column-title">First Name </th>
                                <th class="column-title">Last Name </th>
                                <th class="column-title">Phone Number </th>
                                <th class="column-title">Email </th>
                                <th class="column-title no-link last"><span class="nobr">Action</span>
                                <th class="column-title no-link last">
                                    <span class="nobr">Action</span>
                                </th>
                                <th class="bulk-actions" colspan="7">
                                    <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) </a>
                                    <a class="antoo" style="font-weight:500;" href="#"> &nbsp;&nbsp; Remove</a>
                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (ApplicationUser instructor in Model)
                            {
                                <tr class="odd pointer">
                                    <td class="a-center ">
                                        <input type="checkbox" class="flat" name="table_records">
                                    </td>
                                    <td class=" ">@instructor.FirstName</td>
                                    <td class=" ">@instructor.LastName</td>
                                    <td class=" ">@instructor.PhoneNumber</td>
                                    <td class=" ">@instructor.Email</td>
                                    <td class=" last">
                                        <a href="#">Edit</a>
                                    </td>
                                    <td class=" last">
                                        <a href="#">Remove</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
