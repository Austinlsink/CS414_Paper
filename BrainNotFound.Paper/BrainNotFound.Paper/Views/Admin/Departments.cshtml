@using BrainNotFound.Paper.Models.BusinessModels
@model Department

@{
    ViewData["Title"] = "Department Info - Admin";
    int rowIndex = 0;
}

<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2><i class="fa fa-mortar-board"></i> Departments</h2>

                    <!--Error message for deleting a department-->
                    @if (ViewBag.message != null)
                    {
                        <script type="text/javascript">
                                window.onload = function () {
                                    alert("@ViewBag.message");
                                };
                        </script>
                    }

                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                        <li><a asp-controller="Admin" asp-action="NewDepartment"><i class="fa fa-plus"></i> New Department</a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    @if (ViewBag.departmentList != null)
                    {
                        <div class="table-responsive">
                            <table id="departmentTable" class="table table-striped jambo_table bulk_action ">
                                <thead>
                                    <tr class="headings">
                                        <th class="column-title">Name </th>
                                        <th class="column-title">Code </th>
                                        <th class="column-title no-link last">
                                            <span class="nobr">Action</span>
                                        </th>
                                        <th class="bulk-actions" colspan="7">
                                            <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (Department department in ViewBag.departmentList)
                                    {
                                        <tr class="odd pointer">
                                            <td class=" ">@department.DepartmentName </td>
                                            <td class=" ">@department.DepartmentCode </td>
                                            <td class=" last">
                                                <form asp-action="DeleteDepartment" asp-controller="Admin">
                                                    <button type="button"  onClick="EditDepartmentCodeAndName(@department.DepartmentId)" data-toggle="modal" data-target=".newDepartment" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </button>
                                                    <input type="hidden" name="DepartmentId" value="@department.DepartmentId" />
                                                    <button type="submit" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </button>
                                                </form>

                                            </td>

                                        </tr>
                                        rowIndex++;
                                    }

                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="center">There are no departments to list. Please create a new department.</p>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<!--Modal for editing a department-->
<div class="modal fade newDepartment" tabindex="-1" role="dialog" aria-hidden="true" >
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
                <div class="modal-body" id="departmentPlaceholder">

              

                </div>
        </div>
    </div>
</div>


@section scripts
  {

    <script type="text/javascript" src="~/js/Department.js"></script>

    <script type="text/javascript" charset="utf8">
        $(document).ready(function () {
            $('#departmentTable').DataTable({
                "order": [1, 'asc'],
                "columnDefs": [
                    { "orderable": false, "targets": [2] }
                ],
                "sScrollY": "500px"
            });
        });
    </script>
}