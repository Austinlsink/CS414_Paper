@using BrainNotFound.Paper.Models.BusinessModels
@{
    List<ApplicationUser> students = ViewBag.Students;
}

<table id="DataTable" class="table table-hover">
    <thead>
        <tr>
            <th><input type="checkbox" onclick="toggle(this, 'foo2')"></th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in students)
        {
            <tr>
                <td>
                    <div class="form-check">
                        <input onclick="StudentCheckBox('@student.Id')" class="form-check-input" id="CB-@student.Id" type="checkbox" name="StudentCkeckboxs" value="@student.Id" >
                    </div>
                </td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
            </tr>
        }
    </tbody>
</table>


<script type="text/javascript">
    $("#DataTable").DataTable();
</script>