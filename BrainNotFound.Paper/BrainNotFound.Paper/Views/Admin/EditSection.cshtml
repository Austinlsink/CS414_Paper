
@using BrainNotFound.Paper.Models.BusinessModels
@model Section

@{
    ViewData["Title"] = "Add Section Info - Admin";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2><i class="fa fa-book"></i> Edit Section</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <br />
            <form asp-action="NewSection" asp-controller="Admin" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                <!--Section information(Ex: HI 101 - 1) -->
                <h3 class="form-group">
                    <label class="control-label pull-left col-md-3 col-sm-3 col-xs-12">@ViewBag.department.DepartmentCode @ViewBag.course.CourseCode - @ViewBag.sectionNumber</label>
                    <input type="hidden" asp-for="SectionNumber" value="@ViewBag.sectionNumber" />
                </h3>

                <!--Location-->
                <div class="form-group">
                    <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12"> Location</label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input asp-for="Location" type="text" class="form-control col-md-7 col-xs-12" />
                        <span class="text-danger"></span>
                    </div>
                </div>

                <!--Days meet-->
                <div class="form-group">
                    <label class="control-label pull-left col-md-3 col-sm-3 col-xs-12">Days Meet</label>
                    <div class="col-md-6 col-sm-6 col-xs-6">
                        @{
                            string[] days = ViewBag.sectionMeetingDays.Day.Split(" ");
                            foreach (String day in days)
                            {
                                <input type="checkbox" name="daysMet" value="@day" class="flat" />@day
                            }
                        }
                    </div>
                </div>

                <!--Start Time-->
                <div class="form-group">
                    <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12"> Start Time</label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input required name="startTime" type="time" class="form-control col-md-7 col-xs-12">
                        <span class="text-danger"></span>
                    </div>
                </div>

                <!--End Time-->
                <div class="form-group">
                    <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12"> End Time</label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input required name="endTime" type="time" class="form-control col-md-7 col-xs-12">
                        <span class="text-danger"></span>
                    </div>
                </div>

                <!--Capacity-->
                <div class="form-group">
                    <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Capacity</label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input asp-for="Capacity" type="number" min="1" max="50" class="form-control col-md-7 col-xs-12">
                        <span class="text-danger"></span>
                    </div>
                </div>

                <!--Assign Instructor-->
                <div class="form-group">
                    <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Instructor</label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <select required asp-for="InstructorId" class="select2_single form-control" tabindex="1">
                            <option disabled selected value=""> --Assign a teacher -- </option>
                            @foreach (var i in ViewBag.instructorList)
                            {
                                <option value="@i.Id"> @i.FirstName @i.LastName </option>
                            }
                        </select>
                    </div>
                </div>

                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <button onclick="history.go(-1)" class="btn btn-primary" type="button">Cancel</button>
                        <button type="submit" class="btn btn-success">Add Section</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>