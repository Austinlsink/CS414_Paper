@using BrainNotFound.Paper.Models.BusinessModels;
@model List<ApplicationUser>;
@{
    ViewData["Title"] = "Manage Students - Admin";
}
<!--Error message for deleting a department-->
@if (ViewBag.message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.message");
        };
    </script>
}


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><i class="fa fa-users"></i> Student</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                    <li><a asp-controller="Admin" asp-action="NewStudent"><i class="fa fa-plus"></i> New Student</a></li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <p>Click to select all Students</p>
                <div class="table-responsive">
                    <table id="studentTable" class="table table-striped jambo_table bulk_action">
                        <thead>
                            <tr class="headings">
                                <th class="column-title">Salutation </th>
                                <th class="column-title">First Name </th>
                                <th class="column-title">Last Name </th>
                                <th class="column-title">Phone Number </th>
                                <th class="column-title">Email </th>
                                <th class="column-title no-link last">
                                    <span class="nobr">Actions</span>
                                </th>
                                <th class="bulk-actions" colspan="7">
                                    <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) </a>
                                    <a class="antoo" style="font-weight:500;" href="#"> &nbsp;&nbsp; Remove</a>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ApplicationUser student in Model)
                            {
                                <tr class="odd pointer">
                                    <td class=" ">@student.Salutation</td>
                                    <td class=" ">@student.FirstName</td>
                                    <td class=" ">@student.LastName</td>
                                    <td class=" ">@student.PhoneNumber</td>
                                    <td class=" ">@student.Email</td>
                                    <td>
                                        <form asp-controller="Admin" asp-action="DeleteStudent">
                                            <a asp-controller="Admin" asp-action="ViewStudent" asp-route-UserName="@student.UserName" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                                            <a asp-controller="Admin" asp-action="EditStudent" asp-route-UserName="@student.UserName" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                            <button type="submit" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </button>
                                            <input type="hidden" name="UserName" value="@student.UserName" />
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
    {

    <script type="text/javascript" charset="utf8">
        $(document).ready(function () {
            $('#studentTable').DataTable({
                "order": [1, 'asc'],
                "columnDefs": [
                    { "orderable": false, "targets": [5] }
                ]
            });
        });
    </script>

    <!-- Datatables -->
    <script src="../vendors/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="../vendors/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
    <script src="../vendors/datatables.net-buttons/js/dataTables.buttons.min.js"></script>
    <script src="../vendors/datatables.net-buttons-bs/js/buttons.bootstrap.min.js"></script>
    <script src="../vendors/datatables.net-buttons/js/buttons.flash.min.js"></script>
    <script src="../vendors/datatables.net-buttons/js/buttons.html5.min.js"></script>
    <script src="../vendors/datatables.net-buttons/js/buttons.print.min.js"></script>
    <script src="../vendors/datatables.net-fixedheader/js/dataTables.fixedHeader.min.js"></script>
    <script src="../vendors/datatables.net-keytable/js/dataTables.keyTable.min.js"></script>
    <script src="../vendors/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="../vendors/datatables.net-responsive-bs/js/responsive.bootstrap.js"></script>
    <script src="../vendors/datatables.net-scroller/js/dataTables.scroller.min.js"></script>
}