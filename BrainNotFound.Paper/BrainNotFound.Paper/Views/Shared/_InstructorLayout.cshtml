@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using BrainNotFound.Paper.Models.BusinessModels
@using System.Security.Claims
@using System.Text.RegularExpressions

@using Microsoft.AspNetCore.Identity
@inject BrainNotFound.Paper.PaperDbContext _context
@inject UserManager<ApplicationUser> _userManager
@{
    ApplicationUser instructor = (ApplicationUser)await _userManager.FindByNameAsync(User.Identity.Name);
    var sections = _context.Sections.Where(s => s.InstructorId == instructor.Id);
    var courses = _context.Courses.ToList();
    var departments = _context.Departments.ToList();

    string[] splitname = Regex.Split(Context.User.Identity.Name, @"(?<!^)(?=[A-Z])");
    string username = string.Empty;
    foreach (string s in splitname)
    {
        username += s + ' ';
    }
}

