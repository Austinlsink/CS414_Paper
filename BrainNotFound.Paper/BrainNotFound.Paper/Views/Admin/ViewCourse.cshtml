@using BrainNotFound.Paper.Models.BusinessModels
@model BrainNotFound.Paper.Models.BusinessModels.Course;
@{
    ViewData["Title"] = "View Instructor - Admin";
}

<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2><i class="fa fa-user"></i>Course Information</h2>
                    <ul class="nav navbar-right panel_toolbox">

                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>

                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-edit"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a asp-controller="Admin" asp-action="EditCourse" asp-route-id="@ViewBag.course.CourseId">Edit information</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="col-md-10 col-sm-10 col-xs-12">
                        @{
                            String name;
                            List<Department> departments = ViewBag.DepartmentList;
                            var dept = departments.Where(x => x.DepartmentId == ViewBag.course.DepartmentId).First();
                            name = dept.DepartmentCode + " " + ViewBag.course.CourseCode;

                        }
                        <h3>@name @ViewBag.course.CourseName</h3>

                        <ul class="list-unstyled user_data">
                            <li>
                                <b>Credit Hours:</b> @ViewBag.course.CreditHours
                            </li>

                            <li>
                                <b> Description:</b> @ViewBag.course.Description
                            </li>
                        </ul>
                        <br />

                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2><i class="fa fa-book"></i> Sections</h2>
                                    <ul class="nav navbar-right panel_toolbox">
                                        <li>
                                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                        </li>
                                    </ul>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Section Number</th>
                                                <th>Instructor</th>
                                                <th>Location</th>
                                                <th>Capcity</th>
                                                <th>Day</th>
                                                <th class="column-title no-link last"><span class="nobr">Actions</span>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var s in ViewBag.sectionsList)
                                            {
                                                // Find the instructor name for each section
                                                String instructorName;
                                                List<ApplicationUser> instructors = ViewBag.instructorList;
                                                var instructor = instructors.Where(i => i.Id == s.InstructorId).First();
                                                instructorName = instructor.FirstName + " " + instructor.LastName;

                                                // Find the meeting times for each section
                                                List<String> days = new List<string>();
                                                List<SectionMeetingTime> sectionMeetingTimes = ViewBag.sectionMeetingTimeList;
                                                var sectionMeetingTime = sectionMeetingTimes.Where(smt => smt.SectionId == s.SectionId).ToList();
                                                foreach (SectionMeetingTime smt in sectionMeetingTime)
                                                {
                                                    days.Add(smt.Day);
                                                }
                                                String day = string.Join(", ", days);

                                                <tr>
                                                    <td>@s.SectionNumber</td>
                                                    <td>@instructorName</td>
                                                    <td>@s.Location</td>
                                                    <td>@s.Capacity</td>
                                                    <td>@day</td>
                                                    <td>
                                                        <a asp-controller="Admin" asp-action="ViewSection" asp-route-CourseCode="@ViewBag.course.CourseCode" asp-route-SectionNumber="@s.SectionNumber" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                                                    </td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>