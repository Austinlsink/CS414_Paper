@model BrainNotFound.Paper.Models.BusinessModels.Course;

@{
    ViewData["Title"] = "Add Course Info - Admin";
}

<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2><i class="fa fa-book"></i> Edit Course</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <form asp-action="EditCourse" asp-controller="Admin" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                        <input type="hidden" value="@ViewBag.course.CourseId" asp-for="CourseId" />

                        <div class="form-group">
                            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12"> Course Code </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input value="@ViewBag.course.CourseCode" asp-for="CourseCode" type="text" id="department-name" class="form-control col-md-7 col-xs-12">
                                <span class="text-danger"></span>
                            </div>
                            <span asp-validation-for="CourseCode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12"> Course Name </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input value="@ViewBag.course.Name" asp-for="Name" type="text" class="form-control col-md-7 col-xs-12">
                                <span class="text-danger"></span>
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12"> Course Description </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <textarea name="description" id="description" class="form-control col-md-7 col-xs-12" style="overflow:auto"> @ViewBag.course.Description
                                </textarea>
                                <span class="text-danger"></span>
                            </div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12"> Credit Hours </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input value="@ViewBag.course.CreditHours" asp-for="CreditHours" type="text" id="department-name" class="form-control col-md-7 col-xs-12">
                                <span class="text-danger"></span>
                            </div>
                            <span asp-validation-for="CreditHours" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label pull-left col-md-3 col-sm-3 col-xs-12">Department</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select asp-for="DepartmentId" class="select2_single form-control" tabindex="1">
                                    <option disabled selected value=""> -- select a department -- </option>
                                    @foreach (var d in ViewBag.departments)
                                    {
                                        <option value="departmentName">@d.DepartmentName</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                <button class="btn btn-primary" type="button">Cancel</button>
                                <button type="submit" class="btn btn-success">Save Changes</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
