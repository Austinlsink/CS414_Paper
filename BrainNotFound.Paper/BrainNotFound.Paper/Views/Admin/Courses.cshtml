@using BrainNotFound.Paper.Models.BusinessModels

@model List<Course>

@{
    ViewData["Title"] = "Manage Courses - Admin";
}
<!--Error message for deleting a course-->
@if (ViewBag.message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.message");
        };
    </script>
}
<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2><i class="fa fa-book"></i> Courses</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                        <li><a asp-controller="Admin" asp-action="NewCourse"><i class="fa fa-plus"></i> New Course</a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    @if (Model.Any<Course>())
                    {
                        <p>@ViewBag.errorMessage</p>
                        <div class="table-responsive">
                            <table id="courseTable" class="table table-striped jambo_table bulk_action ">
                                <thead>
                                    <tr class="headings">
                                        <th class="column-title">Course Code </th>
                                        <th class="column-title">Name </th>
                                        <th class="column-title">Credit Hours </th>
                                        <th class="column-title no-link last">
                                            <span class="nobr">Action</span>
                                        </th>
                                        <th class="bulk-actions" colspan="7">
                                            <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Course course in Model)
                                    {
                                        <tr class="odd pointer">
                                            @{
                                                String name;
                                                List<Department> departments = ViewBag.DepartmentList;
                                                var dept = departments.Where(x => x.DepartmentId == course.DepartmentId).First();
                                                name = dept.DepartmentCode + " " + course.CourseCode;
                                            }
                                            <td class=" ">@name</td>
                                            <td class=" ">@course.Name</td>
                                            <td class=" ">@course.CreditHours</td>
                                            <td class=" last">
                                                <form asp-controller="Admin" asp-action="DeleteCourse">
                                                    <a asp-controller="Admin" asp-action="ViewCourse" asp-route-code="@dept.DepartmentCode@course.CourseCode" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                                                    <a asp-controller="Admin" asp-action="EditCourse" asp-route-id="@course.CourseId" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                                    <input type="hidden" name="CourseId" value="@course.CourseId" />
                                                    <button type="submit" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </button>
                                                </form>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        $(document).ready(function () {
            $('#courseTable').DataTable({
                "order": [1, 'asc'],
                "columnDefs": [
                    { "orderable": false, "targets": [3] }
                ],
            });
        });
    </script>
}