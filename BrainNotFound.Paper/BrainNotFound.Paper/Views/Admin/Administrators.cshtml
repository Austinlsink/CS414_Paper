@using BrainNotFound.Paper.Models.BusinessModels;
@model List<ApplicationUser>;

@{
    ViewData["Title"] = "Manage Administators - Admin";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><i class="fa fa-users"></i> Administrators</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                    <li><a asp-controller="Admin" asp-action="NewAdministrator"><i class="fa fa-plus"></i> New Administrator</a></li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <p>@ViewBag.errorMessage</p>

                <div class="table-responsive">
                    <table id="adminTable" class="table table-striped jambo_table bulk_action">
                        <thead>
                            <tr class="headings">
                                <th class="column-title">First Name </th>
                                <th class="column-title">Last Name </th>
                                <th class="column-title">Phone Number </th>
                                <th class="column-title">Email </th>
                                <th class="column-title no-link last">
                                    <span class="nobr">Actions</span>
                                </th>
                                <th class="bulk-actions" colspan="7">
                                    <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) </a>
                                    <a class="antoo" style="font-weight:500;" href="#"> &nbsp;&nbsp; Remove</a>
                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (ApplicationUser admin in Model)
                            {
                                <tr class="odd pointer">
                                    <td class=" ">@admin.FirstName</td>
                                    <td class=" ">@admin.LastName</td>
                                    <td class=" ">@admin.PhoneNumber</td>
                                    <td class=" ">@admin.Email</td>
                                    <td>
                                        <form asp-action="DeleteAdministrator" asp-controller="Admin">
                                            <a asp-controller="Admin" asp-action="ViewAdministrator" asp-route-UserName="@admin.UserName" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                                            <a asp-controller="Admin" asp-action="EditAdministrator" asp-route-UserName="@admin.UserName" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                            <input type="hidden" name="DepartmentId" value="@admin.UserName" />
                                            <button type="submit" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </button>
                                        </form>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{

    <script type="text/javascript" charset="utf8">
        $(document).ready(function () {
            $('#adminTable').DataTable({
                "order": [1, 'asc'],
                "columnDefs": [
                    { "orderable": false, "targets": [4] }
                ]
            });
        });
    </script>
}

