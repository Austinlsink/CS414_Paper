@using BrainNotFound.Paper.Models.BusinessModels;
@model List<ApplicationUser>;

@{
    ViewData["Title"] = "Manage Instructors - Admin";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><i class="fa fa-users"></i> Instructors</h2>
                <p>@ViewBag.Message</p>
                <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                    <li><a asp-controller="Admin" asp-action="NewInstructor"><i class="fa fa-plus"></i> New Instructor</a></li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <p>Click to select all Instructors</p>

                <div class="table-responsive">
                    <table class="table table-striped jambo_table bulk_action">
                        <thead>
                            <tr class="headings">
                                <th>
                                    <input type="checkbox" id="check-all" class="flat">
                                </th>
                                <th class="column-title">First Name </th>
                                <th class="column-title">Last Name </th>
                                <th class="column-title">Phone Number </th>
                                <th class="column-title">Email </th>
                                <th class="column-title no-link last"><span class="nobr">Actions</span>
                                </th>
                                <th class="bulk-actions" colspan="7">
                                    <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) </a>
                                    <a class="antoo" style="font-weight:500;" href="#"> &nbsp;&nbsp; Remove</a>
                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (ApplicationUser instructor in Model)
                            {
                                <tr class="odd pointer">
                                    <td class="a-center ">
                                        <input type="checkbox" class="flat" name="table_records">
                                    </td>
                                    <td class=" ">@instructor.FirstName</td>
                                    <td class=" ">@instructor.LastName</td>
                                    <td class=" ">@instructor.PhoneNumber</td>
                                    <td class=" ">@instructor.Email</td>
                                    <td>
                                      
                                        <form asp-action="DeleteInstructor" asp-controller="Admin">
                                            <a asp-controller="Admin" asp-action="ViewInstructor" asp-route-UserName="@instructor.UserName" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                                            <a asp-controller="Admin" asp-action="EditInstructor" asp-route-UserName="@instructor.UserName" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                            <input type="hidden" name="UserName" value="@instructor.UserName" />
                                            <button type="submit" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </button>
                                        </form>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
