@using BrainNotFound.Paper.Models.BusinessModels

@{
    ViewData["Title"] = "Dashboard - Instructor";
}


<button onclick="GetAllStudents()">Get all Students</button>
<button onclick="GetHostInfo()">GetHostInfo</button>
<div id="test">
    <table class="table">
        <tr></tr>
    </table>
</div>
<div id="demo"></div>

<div class="row">
    <div class="animated flipInY col-lg- col-md-4 col-sm-4 col-xs-12">
        <div class="tile-stats">
            <h3>Tests Overview</h3>
            <div class="x_content">
                <div class="x_content">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Test Name</th>
                                <th># of Essays needing grading</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Test t in ViewBag.Tests)
                            {
                                int essayCounter = 0;
                                foreach(StudentEssayAnswer sea in ViewBag.EssayGrading)
                                {
                                    if(sea.TestSchedule.TestId == t.TestId)
                                    {
                                        essayCounter++;
                                    }
                                }
                            <tr>
                                <td>@t.TestName</td>
                                <td>@essayCounter</td>
                                <td>
                                    <a asp-controller="Instructor" asp-action="GradeTest" asp-route-DepartmentCode="@t.Course.Department.DepartmentCode" asp-route-CourseCode="@t.Course.CourseCode" asp-route-URLSafeName="@t.URLSafeName" class="btn btn-warning btn-xs"><i class="fa fa-pencil"></i> Grade </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


