@using BrainNotFound.Paper.Services;
@model BrainNotFound.Paper.Models.BusinessModels.ApplicationUser;

@{
    ViewData["Title"] = "Edit Administrator - Admin";
}

<div class="row">
    <div class="x_title">
        <h2><i class="fa fa-user"></i> Edit Administrator</h2>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <form asp-controller="Admin" asp-action="EditAdministrator" class="form-horizontal form-label-left">
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Salutation</label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <select asp-for="Salutation" class="select2_single form-control" tabindex="1">

                        @foreach (string salutation in SalutationType.All)
                        {
                            @if (salutation == ViewBag.admin.Salutation)
                            {
                                <option selected value="@salutation">@salutation.</option>
                            }
                            else
                            {
                                <option value="@salutation">@salutation.</option>
                            }

                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="dept-code">
                    UserName <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input value="@ViewBag.admin.UserName" asp-for="UserName" type="text" required="required" class="form-control has-feedback-left">
                    <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="dept-code">
                    First Name <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input value="@ViewBag.admin.FirstName" asp-for="FirstName" type="text" required="required" class="form-control has-feedback-left">
                    <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="dept-code">
                    Last Name <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input value="@ViewBag.admin.LastName" asp-for="LastName" type="text" required="required" class="form-control has-feedback-left" >
                    <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                </div>
            </div>
            <div class="form-group">
                <label for="dept-name" class="control-label col-md-3 col-sm-3 col-xs-12">Email </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input value="@ViewBag.admin.Email" asp-for="Email" class="form-control has-feedback-left"  type="text">
                    <span class="fa fa-envelope form-control-feedback left" aria-hidden="true"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-3">Phone Number</label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input value="@ViewBag.admin.PhoneNumber" asp-for="PhoneNumber" type="text" class="form-control has-feedback-left" data-inputmask="'mask' : '(999) 999-9999'">
                    <span class="fa fa-phone form-control-feedback left" aria-hidden="true"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-3">Address</label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input id="AddressInput" asp-for="Address" value="@ViewBag.admin.Address" type="text" class="form-control has-feedback-left" placeholder="Address">
                    <span class="fa fa-map-marker form-control-feedback left" aria-hidden="true"></span>
                    <span id="AdminAddressErrorMessage" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-3">City</label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input id="CityInput" asp-for="City" type="text" value="@ViewBag.admin.City" class="form-control has-feedback-left" placeholder="City">
                    <span class="fa fa-map-marker form-control-feedback left" aria-hidden="true"></span>
                    <span id="AdminCityErrorMessage" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-3">State</label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input id="StateInput" asp-for="State" type="text" value="@ViewBag.admin.State" class="form-control has-feedback-left" placeholder="State">
                    <span class="fa fa-map-marker form-control-feedback left" aria-hidden="true"></span>
                    <span id="AdminStateErrorMessage" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-3">ZipCode</label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input id="ZipInput" asp-for="ZipCode" type="text" value="@ViewBag.admin.ZipCode" class="form-control has-feedback-left" placeholder="ZipCode">
                    <span class="fa fa-map-marker form-control-feedback left" aria-hidden="true"></span>
                    <span id="AdminZipErrorMessage" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-3">Date of Birth</label>
                <div class="col-md-69 col-sm-6 col-xs-9">
                    <input id="DOBInput" asp-for="DOB" type="date" value="@ViewBag.admin.DOB"class="form-control has-feedback-left" data-inputmask="'mask': '99/99/9999'" placeholder="##/##/####">
                    <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                    <span id="AdminDOBErrorMessage" class="text-danger"></span>
                </div>
            </div>
            <div class="ln_solid"></div>
            <div class="form-group">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                    <button class="btn btn-primary" type="button" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
            </div>
        </form>
    </div>
</div>
