@using BrainNotFound.Paper.Models.BusinessModels;
@using BrainNotFound.Paper.Services;
@{
    ViewData["Title"] = "test_name - Student";
    int option = 97;
}

<input id="testScheduleId" type="hidden" value="@ViewBag.TestSchedule.TestScheduleId" />
<!-- (General test information) beginning of row 2 -->
<div class="x_panel">
    <div class="x_title">
        <h2><i class="fa fa-info-circle"></i> @ViewBag.TestInformation.Course.Department.DepartmentCode @ViewBag.TestInformation.Course.CourseCode @ViewBag.TestInformation.TestName</h2>
        <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <h3>General Information</h3>
        <hr />
        <div class="animated flipInY col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-dot-circle-o"></i>
                </div>
                <div id="TotalPointsStats" class="count"> @ViewBag.TotalPoints </div>
                <h3>Total Points</h3>
            </div>
        </div>
        <div class="animated flipInY  col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-question"></i>
                </div>
                <div id="TotalQuestionsStats" class="count">@(ViewBag.TFQuestions.Count + ViewBag.MCQuestions.Count)</div>
                <h3>Questions</h3>
            </div>
        </div>
        <div class="animated flipInY col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-sort-alpha-asc"></i>
                </div>
                <div id="TotalSectionsStats" class="count">@ViewBag.TestSections.Count</div>
                <h3>Sections</h3>
            </div>
        </div>
        <div class="animated flipInY col-md-3 col-sm-6 col-xs-12">
            <div class="tile-stats">
                <div class="icon">
                    <i class="fa fa-clock-o"></i>
                </div>
                <div id="TimeLimitStats" class="count">@ViewBag.TestSchedule.EndTime.Subtract(ViewBag.TestSchedule.StartTime)</div>
                <h3>Time Limit</h3>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>

<!-- True false section template-->
@foreach (TestSection ts in ViewBag.TestSections)
{
    switch (ts.QuestionType)
    {
        case "TrueFalse":
            <div class="x_panel">
                <div class="x_title">
                    <h2><i class="fa fa-info-circle"></i> | @DefaultTestSectionText.Header.Get(ts.QuestionType)</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <p><b>Instructions:</b> @ts.SectionInstructions</p>
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <p><b>Questions:</b> </p>
                    </div>
                    @{
                        int count = 1;
                        foreach (TrueFalse q in ViewBag.TFQuestions)
                        {

                            <div class="col-md-12 col-sm-12 col-xs-12 questionRow" style="padding: 20px 0 10px 0">
                                <div class="col-md-1 col-sm-1 col-xs-3 text-center">
                                    <span id="pointValue-56789">(@q.PointValue pts.)</span>
                                </div>
                                <div class="col-md-9 col-sm-9 col-xs-11">
                                    <p><strong>@count.</strong> @q.Content</p>
                                </div>

                                <div class="form-group col-md-2 col-sm-2 col-xs-12">
                                    @if (ViewBag.StudentTFAnswers.Count > 0)
                                    {
                                        @foreach (StudentTrueFalseAnswer answer in ViewBag.StudentTFAnswers)
                                        {
                                            if (answer.QuestionId == q.QuestionId && answer.TrueFalseAnswerGiven == true)
                                            {
                                                <!-- True -->
                                                <div id="gender" class="btn-group" data-toggle="buttons">
                                                    <label class="btn btn-primary btn-sm" data-questionType="trueFalse" data-toogled-class="btn-primary">
                                                        <input type="radio" checked="checked" name="trueFalseAnswer-@q.QuestionId" data-questionId="@q.QuestionId" value="true"> &nbsp; True &nbsp;
                                                    </label>
                                                    <label class="btn btn-default btn-sm" data-questionType="trueFalse" data-toogled-class="btn-danger">
                                                        <input type="radio" name="trueFalseAnswer-@q.QuestionId" data-questionId="@q.QuestionId" value="false"> False
                                                    </label>
                                                </div>
                                            }
                                            else if (answer.QuestionId == q.QuestionId && answer.TrueFalseAnswerGiven == false)
                                            {
                                                <!-- False -->
                                                <div id="gender" class="btn-group" data-toggle="buttons">
                                                    <label class="btn btn-default btn-sm" data-questionType="trueFalse" data-toogled-class="btn-primary">
                                                        <input type="radio" name="trueFalseAnswer-@q.QuestionId" data-questionId="@q.QuestionId" value="true"> &nbsp; True &nbsp;
                                                    </label>
                                                    <label class="btn btn-danger btn-sm" data-questionType="trueFalse" data-toogled-class="btn-danger">
                                                        <input type="radio" checked="checked" name="trueFalseAnswer-@q.QuestionId" data-questionId="@q.QuestionId" value="false"> False
                                                    </label>
                                                </div>
                                            }
                                        }
                                        <!--Default-->
                                        <div id="gender" class="btn-group" data-toggle="buttons">
                                            <label class="btn btn-default btn-sm" data-questionType="trueFalse" data-toogled-class="btn-primary">
                                                <input type="radio" name="trueFalseAnswer-@q.QuestionId" data-questionId="@q.QuestionId" value="true"> &nbsp; True &nbsp;
                                            </label>
                                            <label class="btn btn-default btn-sm" data-questionType="trueFalse" data-toogled-class="btn-danger">
                                                <input type="radio" name="trueFalseAnswer-@q.QuestionId" data-questionId="@q.QuestionId" value="false"> False
                                            </label>
                                        </div>
                                    }
                                    else
                                    {
                                        <!--Default-->
                                        <div id="gender" class="btn-group" data-toggle="buttons">
                                            <label class="btn btn-default btn-sm" data-questionType="trueFalse" data-toogled-class="btn-primary">
                                                <input type="radio" name="trueFalseAnswer-@q.QuestionId" data-questionId="@q.QuestionId" value="true"> &nbsp; True &nbsp;
                                            </label>
                                            <label class="btn btn-default btn-sm" data-questionType="trueFalse" data-toogled-class="btn-danger">
                                                <input type="radio" name="trueFalseAnswer-@q.QuestionId" data-questionId="@q.QuestionId" value="false"> False
                                            </label>
                                        </div>
                                    }

                                </div>
                            </div>
                            count++;
                        }
                    }
                </div>
            </div>
            break;
        case "MultipleChoice":
            <div class="x_panel">
                <div class="x_title">
                    <h2><i class="fa fa-info-circle"></i> | @DefaultTestSectionText.Header.Get(ts.QuestionType)</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <p><b>Instructions:</b> @ts.SectionInstructions</p>
                        </div>
                    </div>
                    <div class="ln_solid"></div>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <p><b>Questions:</b> </p>
                    </div>
                    @{
                        int countMC = 1;
                        foreach (Question mcQuestion in ViewBag.MCQuestions)
                        {
                            <div class="ln_solid"></div>
                            <div class="row">
                                <div class="col-sm-12 col-xs-12 questionRow">
                                    <div class="col-md-1 col-sm-1 col-xs-3 text-center">
                                        <span id="pointValue-56789">(@mcQuestion.PointValue pts.)</span>
                                    </div>
                                    <div class="col-md-11 col-sm-11 col-xs-11">
                                        <p><strong>@countMC.</strong> @mcQuestion.Content</p>
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="col-md-1 col-sm- col-xs-12"></div>
                                    <div class=" col-md-10 col-sm-10 col-xs-12">
                                        @{
                                            option = 97;
                                            foreach (MultipleChoiceAnswer mca in mcQuestion.MultipleChoiceAnswers)
                                            {
                                                if (ViewBag.StudentMCAnswers.Count <= 0)
                                                {
                                                    <a class="btn btn-default btn-block text-left multipleChoiceOption" name="multipleChoiceAnswer-@mcQuestion.QuestionId" data-mcQuestionId="@mcQuestion.QuestionId" data-mcanswerId="@mca.MultipleChoiceAnswerId" data-isSelected="false"><span class="pull-left"><strong>@Convert.ToChar(option). </strong> @mca.MultipleChoiceAnswerOption</span>&nbsp;</a>
                                                    option++;
                                                }
                                                else
                                                {
                                                    foreach (StudentMultipleChoiceAnswer studentAnswer in ViewBag.StudentMCAnswers)
                                                    {

                                                        if (mca.QuestionId == mcQuestion.QuestionId && studentAnswer.MultipleChoiceAnswerId == mca.MultipleChoiceAnswerId)
                                                        {
                                                            <a class="btn btn-primary btn-block text-left multipleChoiceOption" name="multipleChoiceAnswer-@mcQuestion.QuestionId" data-mcQuestionId="@mcQuestion.QuestionId" data-mcanswerId="@mca.MultipleChoiceAnswerId" data-isSelected="false"><span class="pull-left"><strong>@Convert.ToChar(option). </strong> @mca.MultipleChoiceAnswerOption</span>&nbsp;</a>
                                                            option++;
                                                        }
                                                        else if (mca.QuestionId == mcQuestion.QuestionId && mca.QuestionId == studentAnswer.StudentAnswer.QuestionId)
                                                        {
                                                            <a class="btn btn-default btn-block text-left multipleChoiceOption" name="multipleChoiceAnswer-@mcQuestion.QuestionId" data-mcQuestionId="@mcQuestion.QuestionId" data-mcanswerId="@mca.MultipleChoiceAnswerId" data-isSelected="false"><span class="pull-left"><strong>@Convert.ToChar(option). </strong> @mca.MultipleChoiceAnswerOption</span>&nbsp;</a>
                                                            option++;
                                                        }
                                                        else
                                                        {
                                                            <a class="btn btn-default btn-block text-left multipleChoiceOption" name="multipleChoiceAnswer-@mcQuestion.QuestionId" data-mcQuestionId="@mcQuestion.QuestionId" data-mcanswerId="@mca.MultipleChoiceAnswerId" data-isSelected="false"><span class="pull-left"><strong>@Convert.ToChar(option). </strong> @mca.MultipleChoiceAnswerOption</span>&nbsp;</a>
                                                            option++;
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    </div>

                                    <div class="col-md-1 col-sm- col-xs-12"></div>
                                </div>
                            </div>
                            countMC++;
                        }
                    }
                </div>
            </div>
            break;
        default:
            break;
    }

}

<!--Pledge and submition-->
<div class="x_panel">
    <div class="x_title">
        <h2><i class="fa fa-paper-plane-o"></i> Pledge & Submitions</h2>
        <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 ">
                <p>I pledge that I did not cheat. All questions were answered to the best of my ability. My phone a friend was Chuck Norris.</p>
                <br />
            </div>
            <div class="col-md-4 col-sm-4 col-xs-12 ">
                <input type="text" id="fullnameInput" class="form-control " name="fullname" required="" placeholder="Type in full name">
                <span id="fullname" data-studentName="@ViewBag.Student.FirstName @ViewBag.Student.LastName">@ViewBag.Student.FirstName @ViewBag.Student.LastName</span><br/>
                <span class="text-danger hidden" id="pledgeErrorMessage">Signature does not match name</span>

            </div>

            <br />
            <div class="clearfix"></div>
            <div class="col-md-4 col-sm-4 col-xs-12 ">
                <br />
                <button id="submitTest" type="button" class="btn btn-info btn-lg">Submit Test</button>
            </div>
        </div>

    </div>

</div>

<!-- Error Modal-->
<div id="ErrorModal" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel2"></h4>
            </div>
            <div class="modal-body">
                <p id="errorMessagePlaceHolder"></p>
                <div class="modal-footer">
                    <button id="MessageNo" type="button" class="btn btn-default" data-dismiss="modal">No</button>
                    <button id="MessageYes" type="button" class="btn btn-default submitTest" data-dismiss="modal">Yes</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Success Modal-->
<div id="SuccessModal" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title" id="successModalHeader">Congratulations!</h4>
            </div>
            <div class="modal-body">
                <p id="successModalPlaceholder"></p>
                <div class="modal-footer">
                    <button id="submit" type="button" class="btn btn-default submitTest" data-dismiss="modal">Okay!</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- All questions not answered Modal-->
<div id="QuestionsAnsweredModal" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title" id="questionModalHeader">Warning!</h4>
            </div>
            <div class="modal-body">
                <p id="questionModalPlaceholder"></p>
                <div class="modal-footer">
                    <button id="questionModalYes" type="button" class="btn btn-default" data-dismiss="modal">No</button>
                    <button id="questionModalNo" type="button" class="btn btn-default submitTest" data-dismiss="modal">Yes</button>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
    {
    <script src="~/js/TakeTest.js" type="text/javascript"></script>

}
